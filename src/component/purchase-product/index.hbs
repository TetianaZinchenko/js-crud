{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

{{#with data}}
  <div class='product-card'>
    <img
      src='{{img}}'
      alt='{{title}}'
      class='product-card__image'
    />
    <h2 class='product-card__title'>{{title}}</h2>
    <p class='product-card__subtitle'>{{description}}</p>

    <div class='product-card__categories'>
      {{#each category}}
        <span
          class='product-card__category product-card__category--{{id}}'
        >{{text}}</span>
      {{/each}}
    </div>

    <a
      href='/purchase-product?id={{id}}'
      class='product-card__button product-card__button--blue'
    >
      Купити зараз:
      <span
        class='product-card__button-price'
      >{{price}}₴</span>

      {{!-- {{> button text="Купити зараз" price=price}} --}}
    </a>
  </div>
{{/with}}

