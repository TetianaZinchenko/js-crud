{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/purchase"
 }}

<main class="main">

{{#with data.item}}
<form method="POST" action="/purchase-update?id={{id}}" class="form-card">
  
  {{> heading title="Зміна даних"}}
  
<div class="form-card__container">

<div class="purchase-item">
    <span>ID:</span> {{id}}
  </div>

<div class="form-card__item">
  {{> field label="Прізвище" name="lastname" value=lastname }}

{{> field label="Ім'я" name="firstname" value=firstname }}
</div>

<div class="form-card__item">

  {{> field label="Електронна пошта" name="email" value=email }}

  {{> field label="Телефон" name="phone" value=phone }}

</div>

{{> button text="Зберегти зміни"}}

</div>
  
  </form>
{{/with}}

</main>

