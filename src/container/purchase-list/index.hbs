{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/purchase"
 }}

<main class="main">

<div class="purchase-list__title">
    {{> heading title="Мої замовлення"}}
</div>

<section>
    <div class='purchases'>
      <div>
        {{#with data.purchases}}
          {{#if isEmpty}}
            <p class='purchases__info'>Замовлень ще немає</p>
          {{else}}
            <ul class='purchases__list'>
              {{#each list}}
                <li class="purchases__list-item">
                  {{> purchase-card data=this}}
                  {{> divider}}
                </li>
              {{/each}}
          {{/if}}
        {{/with}}
      </div>
    </div>
</section>

</main>

