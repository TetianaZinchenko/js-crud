{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/purchase"
 }}

<main class="main">

{{#with data.product}}
<form method="POST" action="/purchase-create?id={{id}}">
  <div class='product-info'>

    <div>
        <img
      src='{{img}}'
      alt='{{title}}'
      class='product-info__image'
    />
    </div>
    
    <div class='product-info__container'>
        
    <h2 class='product-info__title'>{{title}}</h2>
    <p class='product-info__subtitle'>{{description}}</p>

{{> divider}}

    {{> field label="Кількість товару" type="number" name="amount" value="1"}}

    <button
      class='product-info__button product-info__button--blue'
    >Купити зараз:
      <span
        class='product-info__button-price'
      >{{price}}₴</span></button>
    </div>

  </div>
  </form>
{{/with}}

<div class="product-info__heading">
    {{> heading title="Інші товари" info="Комп'ютери та ноутбуки" }}
</div>

<div class="product-list">
    {{#each data.list}}
    {{> purchase-product data=this}}
    {{/each}}
</div>

</main>

